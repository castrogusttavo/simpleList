{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [".next/**", "node_modules"],
		"include": ["app/**/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"useAltText": "off",
				"noAutofocus": "off",
				"noPositiveTabindex": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noUselessConstructor": "off"
			},
			"suspicious": {
				"noDebugger": "off",
				"noConsoleLog": "info"
			},
			"style": {
				"noShoutyConstants": "off",
				"useNamingConvention": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"bracketSpacing": true,
			"quoteProperties": "asNeeded",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"jsxQuoteStyle": "single",
			"attributePosition": "auto",
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 80
		}
	}
}
